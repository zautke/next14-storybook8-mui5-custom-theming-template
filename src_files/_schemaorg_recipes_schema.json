{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Recipe",
    "type": "object",
    "properties": {
        "@context": {
            "type": "string",
            "example": "https://schema.org"
        },
        "@type": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "example": ["Recipe"]
        },
        "name": {
            "type": "string",
            "description": "The name of the recipe."
        },
        "author": {
            "type": "object",
            "properties": {
                "@type": {
                    "type": "string",
                    "example": "Person"
                },
                "name": {
                    "type": "string",
                    "description": "Name of the author."
                }
            },
            "required": ["@type", "name"]
        },
        "datePublished": {
            "type": "string",
            "format": "date-time",
            "description": "The publication date of the recipe."
        },
        "description": {
            "type": "string",
            "description": "A description of the recipe."
        },
        "image": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "uri"
            },
            "description": "An image of the recipe."
        },
        "recipeYield": {
            "type": "string",
            "description": "The quantity produced by the recipe (e.g., number of servings)."
        },
        "prepTime": {
            "type": "string",
            "description": "The time it takes to prepare the recipe (in ISO 8601 duration format)."
        },
        "cookTime": {
            "type": "string",
            "description": "The time it takes to cook the recipe (in ISO 8601 duration format)."
        },
        "totalTime": {
            "type": "string",
            "description": "The total time required for the recipe (in ISO 8601 duration format)."
        },
        "recipeIngredient": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "The ingredients used in the recipe."
        },
        "recipeInstructions": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "@type": {
                        "type": "string",
                        "example": "HowToStep"
                    },
                    "text": {
                        "type": "string",
                        "description": "The instruction step."
                    },
                    "name": {
                        "type": "string",
                        "description": "Name of the step."
                    },
                    "url": {
                        "type": "string",
                        "format": "uri",
                        "description": "A URL linking to more details about the step."
                    }
                },
                "required": ["@type", "text"]
            },
            "description": "The instructions for preparing the recipe."
        },
        "aggregateRating": {
            "type": "object",
            "properties": {
                "@type": {
                    "type": "string",
                    "example": "AggregateRating"
                },
                "ratingValue": {
                    "type": "number",
                    "description": "The rating value."
                },
                "ratingCount": {
                    "type": "number",
                    "description": "The number of ratings."
                }
            },
            "required": ["@type", "ratingValue", "ratingCount"]
        },
        "review": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "@type": {
                        "type": "string",
                        "example": "Review"
                    },
                    "reviewRating": {
                        "type": "object",
                        "properties": {
                            "@type": {
                                "type": "string",
                                "example": "Rating"
                            },
                            "ratingValue": {
                                "type": "number",
                                "description": "The rating value."
                            }
                        },
                        "required": ["@type", "ratingValue"]
                    },
                    "reviewBody": {
                        "type": "string",
                        "description": "The body of the review."
                    },
                    "author": {
                        "type": "object",
                        "properties": {
                            "@type": {
                                "type": "string",
                                "example": "Person"
                            },
                            "name": {
                                "type": "string",
                                "description": "The name of the author."
                            }
                        },
                        "required": ["@type", "name"]
                    },
                    "datePublished": {
                        "type": "string",
                        "format": "date-time",
                        "description": "The publication date of the review."
                    }
                },
                "required": ["@type", "reviewRating", "reviewBody", "author", "datePublished"]
            },
            "description": "Reviews of the recipe."
        },
        "recipeCategory": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "The category of the recipe (e.g., appetizer, main course)."
        },
        "recipeCuisine": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "The cuisine of the recipe (e.g., French, Indian)."
        },
        "keywords": {
            "type": "string",
            "description": "Keywords or tags used to describe the recipe."
        },
        "nutrition": {
            "type": "object",
            "properties": {
                "@type": {
                    "type": "string",
                    "example": "NutritionInformation"
                },
                "servingSize": {
                    "type": "string",
                    "description": "The serving size."
                },
                "calories": {
                    "type": "string",
                    "description": "The number of calories."
                },
                "sugarContent": {
                    "type": "string",
                    "description": "The sugar content."
                },
                "sodiumContent": {
                    "type": "string",
                    "description": "The sodium content."
                },
                "fatContent": {
                    "type": "string",
                    "description": "The fat content."
                },
                "saturatedFatContent": {
                    "type": "string",
                    "description": "The saturated fat content."
                },
                "carbohydrateContent": {
                    "type": "string",
                    "description": "The carbohydrate content."
                },
                "fiberContent": {
                    "type": "string",
                    "description": "The fiber content."
                },
                "proteinContent": {
                    "type": "string",
                    "description": "The protein content."
                },
                "cholesterolContent": {
                    "type": "string",
                    "description": "The cholesterol content."
                }
            },
            "required": ["@type", "servingSize", "calories"]
        }
    },
    "required": ["@context", "@type", "name", "recipeIngredient", "recipeInstructions"]
}
