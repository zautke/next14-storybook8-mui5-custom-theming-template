{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components/*": [
        "./components/*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "components/types"
    ],
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "mui-theme.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "customTheme/mui5.d.ts",
    "libdb/*.ts",
    "customTheme/z-depth.js",
    //"@mui/material/styles/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/tmp/**",
    "public"
  ]
  // "types": [
  //   "app/**/*.d.ts",
  // ]
}
